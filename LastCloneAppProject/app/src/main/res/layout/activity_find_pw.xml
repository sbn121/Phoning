<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.FindPwActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgv_back"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_arrow_back_ios_new_24"/>

    </RelativeLayout>

    <TextView
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호 재설정을 위해\n이메일을 확인해주세요"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:textStyle="bold"/>

    <TextView
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="입력한 이메일 주소에 해당하는 \n비밀번호를 재설정합니다."/>

    <TextView
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이메일"/>
    <EditText
        android:id="@+id/edt_email"
        android:layout_marginHorizontal="18dp"
        android:hint="your@email.com"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test@test.com"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_pw"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="새 비밀번호"/>
    <RelativeLayout
        android:id="@+id/rl_pw"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:id="@+id/tv_newPw"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test@test.com"
        android:textColor="@color/black"
        android:textSize="17dp"
        />
        <ImageView
            android:id="@+id/imgv_copy"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/tv_newPw"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/baseline_content_copy_24"/>

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <ImageView
            android:id="@+id/imgv_next"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/join_next"/>
        
    </RelativeLayout>

</LinearLayout>