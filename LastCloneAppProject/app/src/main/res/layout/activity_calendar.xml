<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/calendar_background"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgv_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/back"/>

            <LinearLayout
                android:id="@+id/ln_date"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/imgv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_year"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023년"/>
                <TextView
                    android:id="@+id/tv_month"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7월"/>
                <TextView
                    android:id="@+id/tv_day"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5일"/>
                <ImageView
                    android:id="@+id/imgv_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_keyboard_arrow_down_24"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/imgv_today"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:src="@drawable/calendar_today"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <HorizontalScrollView
                android:id="@+id/hsv"
                android:scrollbars="none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgv_all"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginHorizontal="2dp"
                        android:src="@drawable/calendar_all_checked" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imgv_newjeans"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginHorizontal="2dp"
                        android:src="@drawable/calendar_newjeans" />
                    <TextView
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="#535354"
                        android:textSize="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NewJeans"/>
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/imgv_minji"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginHorizontal="2dp"
                            android:src="@drawable/calendar_minji" />
                        <TextView
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textColor="#535354"
                            android:textSize="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="민지"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/imgv_hanni"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginHorizontal="2dp"
                            android:src="@drawable/calendar_hanni" />
                        <TextView
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textColor="#535354"
                            android:textSize="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="하니"/>
                        <TextView
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textColor="#535354"
                            android:textSize="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="_hanni_:)"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/imgv_danielle"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginHorizontal="2dp"
                            android:src="@drawable/calendar_danielle" />
                        <TextView
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textColor="#535354"
                            android:textSize="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="다니엘"/>
                        <TextView
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textColor="#535354"
                            android:textSize="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="_Danielle"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/imgv_hyein"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginHorizontal="2dp"
                            android:src="@drawable/calendar_hyein" />
                        <TextView
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textColor="#535354"
                            android:textSize="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="혜인:)Hyein"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/imgv_haerin"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginHorizontal="2dp"
                            android:src="@drawable/calendar_haerin" />
                        <TextView
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textColor="#535354"
                            android:textSize="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="해린_haerin"/>
                    </LinearLayout>


                </LinearLayout>

            </HorizontalScrollView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recv_calendar"
                android:layout_below="@id/hsv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:id="@+id/fl_bg"
                android:layout_below="@id/dp"
                android:background="@color/black"
                android:alpha="0.6"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>


            <DatePicker
                android:id="@+id/dp"
                android:visibility="gone"
                android:background="#FEFEFE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:calendarViewShown="false"
                android:datePickerMode="spinner" />

        </RelativeLayout>


    </LinearLayout>
