<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear">

    <FrameLayout
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:id="@+id/fl_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardview_border_black">
    <androidx.cardview.widget.CardView
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"
        app:cardElevation="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="60dp">
    <ImageView
        android:id="@+id/imgv_newjeans"
        android:scaleType="centerCrop"
        android:src="@drawable/haerin2"
        android:layout_width="60dp"
        android:layout_height="60dp"/>
    </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/fl_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#B83329"
            android:text="다니엘_Danielle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_call_time"
            android:textSize="17dp"
            android:textColor="#60605F"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="37:46"/>

    </LinearLayout>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="right"
            android:id="@+id/call_date"
            android:gravity="right"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023. 6. 27. 16:10"/>

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/call_check"
            android:layout_gravity="right"
            android:layout_width="15dp"
            android:layout_height="15dp"
            />

        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="50dp"
        android:background="#BAD3E9" />


</RelativeLayout>