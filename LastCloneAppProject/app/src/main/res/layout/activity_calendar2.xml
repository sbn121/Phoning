<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/calendar_background"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgv_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/back"/>

            <LinearLayout
                android:id="@+id/ln_date"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/imgv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_year"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023년"/>
                <TextView
                    android:id="@+id/tv_month"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7월"/>
                <TextView
                    android:id="@+id/tv_day"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5일"/>
                <ImageView
                    android:id="@+id/imgv_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_keyboard_arrow_down_24"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/imgv_today"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:src="@drawable/calendar_today"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <HorizontalScrollView
                android:id="@+id/hsv"
                android:scrollbars="none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgv_all"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginHorizontal="2dp"
                        android:src="@drawable/calendar_all_checked" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imgv_newjeans"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_marginHorizontal="2dp"
                        android:src="@drawable/calendar_newjeans" />
                    <TextView
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="#535354"
                        android:textSize="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NewJeans"/>
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/imgv_minji"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginHorizontal="2dp"
                            android:src="@drawable/calendar_minji" />
                        <TextView
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textColor="#535354"
                            android:textSize="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="민지"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/imgv_hanni"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginHorizontal="2dp"
                            android:src="@drawable/calendar_hanni" />
                        <TextView
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textColor="#535354"
                            android:textSize="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="하니"/>
                        <TextView
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textColor="#535354"
                            android:textSize="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="_hanni_:)"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/imgv_danielle"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginHorizontal="2dp"
                            android:src="@drawable/calendar_danielle" />
                        <TextView
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textColor="#535354"
                            android:textSize="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="다니엘"/>
                        <TextView
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textColor="#535354"
                            android:textSize="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="_Danielle"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/imgv_hyein"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginHorizontal="2dp"
                            android:src="@drawable/calendar_hyein" />
                        <TextView
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textColor="#535354"
                            android:textSize="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="혜인:)Hyein"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/imgv_haerin"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginHorizontal="2dp"
                            android:src="@drawable/calendar_haerin" />
                        <TextView
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textColor="#535354"
                            android:textSize="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="해린_haerin"/>
                    </LinearLayout>


                </LinearLayout>

            </HorizontalScrollView>
            <ScrollView
                android:layout_below="@id/hsv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <LinearLayout
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rl_today1"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_year1"
                            android:textSize="17dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2023년"/>
                        <TextView
                            android:id="@+id/tv_month1"
                            android:textSize="17dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_toEndOf="@id/tv_year1"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7월"/>
                        <TextView
                            android:id="@+id/tv_day1"
                            android:textSize="17dp"
                            android:layout_toEndOf="@id/tv_month1"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7일"/>

                        <TextView
                            android:id="@+id/tv_date1"
                            android:textSize="17dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="금요일"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_radius2"
                        android:padding="15dp"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imgv_profile1_1"
                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/calendar_newjeans"/>

                            <TextView
                                android:id="@+id/tv_writer1"
                                android:textStyle="bold"
                                android:textColor="#747474"
                                android:layout_marginHorizontal="5dp"
                                android:layout_toEndOf="@id/imgv_profile1_1"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:text="NewJeans"/>

                            <ImageView
                                android:layout_centerVertical="true"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/calendar_language"
                                android:layout_alignParentEnd="true"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginVertical="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imgv_movie1_1"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/calendar_movie"/>

                            <TextView
                                android:id="@+id/tv_title1_1"
                                android:layout_toEndOf="@id/imgv_movie1_1"
                                android:layout_centerVertical="true"
                                android:layout_marginHorizontal="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="'New Jeans' MV"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="18dp"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imgv_chat1_1"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/calendar_chat"/>

                            <TextView
                                android:id="@+id/tv_chat1_1"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@id/imgv_chat1_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="891"/>

                            <TextView
                                android:id="@+id/tv_time1_1"
                                android:textSize="15dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="오전12:00"/>

                        </RelativeLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_radius2"
                        android:padding="15dp"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imgv_profile"
                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/calendar_newjeans"/>

                            <TextView
                                android:id="@+id/tv_writer"
                                android:textStyle="bold"
                                android:textColor="#747474"
                                android:layout_marginHorizontal="5dp"
                                android:layout_toEndOf="@id/imgv_profile"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:text="NewJeans"/>

                            <ImageView
                                android:layout_centerVertical="true"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/calendar_language"
                                android:layout_alignParentEnd="true"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginVertical="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imgv_movie"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/calendar_movie"/>

                            <TextView
                                android:id="@+id/tv_title"
                                android:layout_toEndOf="@id/imgv_movie"
                                android:layout_centerVertical="true"
                                android:layout_marginHorizontal="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="'New Jeans' MV"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="18dp"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imgv_chat"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/calendar_chat"/>

                            <TextView
                                android:id="@+id/tv_chat"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@id/imgv_chat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="891"/>

                            <TextView
                                android:id="@+id/tv_time"
                                android:textSize="15dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="오전12:00"/>

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <FrameLayout
                android:id="@+id/fl_bg"
                android:background="@color/black"
                android:alpha="0.6"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>


            <DatePicker
                android:id="@+id/dp"
                android:visibility="gone"
                android:background="#FEFEFE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:calendarViewShown="false"
                android:datePickerMode="spinner" />

        </RelativeLayout>


    </LinearLayout>
