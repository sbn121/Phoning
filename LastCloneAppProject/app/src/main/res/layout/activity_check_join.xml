<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.CheckJoinActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgv_back"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_arrow_back_ios_new_24"/>

        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imgv_close"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/login_close"/>

    </RelativeLayout>
    <TextView
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sbn121@naver.com"
        android:textColor="#5AC7C7"
        android:textStyle="bold"
        android:textSize="30dp"/>
    <TextView
        android:layout_marginHorizontal="10dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="이 이메일은 새로 가입할 수 있는 이메일입니다. 계속하시겠습니까?"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgv_join"
        android:layout_marginHorizontal="10dp"
        android:layout_above="@id/tv_back"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/check_join"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/tv_back"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/check_join"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"
        android:paddingVertical="10dp"
        android:gravity="center"/>

</RelativeLayout>
</LinearLayout>