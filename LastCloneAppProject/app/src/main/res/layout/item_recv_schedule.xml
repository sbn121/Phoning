<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_radius2"
    android:padding="15dp"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgv_profile"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/calendar_newjeans"/>

        <TextView
            android:id="@+id/tv_writer"
            android:textStyle="bold"
            android:textColor="#747474"
            android:layout_marginHorizontal="5dp"
            android:layout_toEndOf="@id/imgv_profile"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="NewJeans"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/calendar_language"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginVertical="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgv_movie"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/calendar_movie"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_toEndOf="@id/imgv_movie"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="'New Jeans' MV"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgv_chat"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/calendar_chat"/>

        <TextView
            android:id="@+id/tv_chat"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/imgv_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="891"/>

        <TextView
            android:id="@+id/tv_time"
            android:textSize="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오전12:00"/>

    </RelativeLayout>

</LinearLayout>